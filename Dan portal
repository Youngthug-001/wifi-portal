<body>
    <div class="portal-container">
        <h2>Welcome to Our Wi-Fi</h2>
        <p>Enter your voucher code to get access:</p>

        <form id="voucherForm">
            <input type="text" id="voucherCode" placeholder="Enter voucher code" required>
            <button type="submit">Submit</button>
        </form>

        <p>Or pay via M-Pesa:</p>
        <a class="payment-link" href="https://www.safaricom.co.ke/personal/m-pesa" target="_blank">Pay Now with M-Pesa</a>

        <p id="message" style="color:red; margin-top:10px;"></p>
    </div>

    <script>
        const voucherForm = document.getElementById('voucherForm');
        const message = document.getElementById('message');

        voucherForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const code = document.getElementById('voucherCode').value.trim();

            // Simple example: predefined voucher codes
            const validVouchers = ["ABC123", "FREEWIFI", "VIP2025"];

            if(validVouchers.includes(code)) {
                message.style.color = "green";
                message.textContent = "Voucher accepted! You now have internet access.";
                // Here you can trigger router API or redirect to internet access page
                setTimeout(() => {
                    window.location.href = "http://example.com"; // replace with actual redirect
                }, 2000);
            } else {
                message.style.color = "red";
                message.textContent = "Invalid voucher code. Try again or pay via M-Pesa.";
            }
        });
    </script>
